# -*- mode: python ; coding: utf-8 -*-


a = Analysis(
    {{entry_points}},
    pathex=[{%- for path in pathex %}
        "{{path}}"{% if not loop.last %}, {% endif %}
    {%- endfor %}],
    binaries=[],
    datas=[],
    hiddenimports=[],
    hookspath=[{%- for path in hooks_path %}
        "{{path}}"{% if not loop.last %}, {% endif %}
    {%- endfor %}],
    hooksconfig={},
    runtime_hooks=[],
    excludes=[],
    noarchive=False,
    optimize=0,
)
pyz = PYZ(a.pure)

exe = EXE(
    pyz,
    a.scripts,
    [],
    exclude_binaries=True,
    name='{{name}}',
    debug={{debug}},
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,
    console=False,
    disable_windowed_traceback=False,
    argv_emulation=False,
    target_arch=None,
    codesign_identity=None,
    entitlements_file=None,
)
coll = COLLECT(
    exe,
    a.binaries,
    a.datas,
    strip=False,
    upx=True,
    upx_exclude=[],
    name='{{name}}',
)

app = BUNDLE(coll,
     name='Galatea Configuration Editor.app', # This defines the .app bundle name
{#     icon='path/to/your_icon.icns', # Add this for the .app icon#}
